library(grid)
rect <- rectGrob(gp = gpar(fill = "#00000080"))
tab <- gtable(widths=unit(c(5,3,4,3), "cm"), heights=unit(c(1,1,4,2), "cm"))
tab <- gtable_add_grob(tab, rect, t = 1, l=1,r = 1)
tab <- gtable_add_grob(tab, rect, t = 2, l=3,r = 3)
# tab <- gtable_add_grob(tab, rect, t = 1, l = 1, b = 3)
# tab <- gtable_add_grob(tab, rect, t = 1, b = 3, l = 3)
dim(tab)
plot(tab)
